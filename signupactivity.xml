<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/t1"
            android:text="Sign Up"
            android:textSize="40dp"
            android:textColor="#03ae3c"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name2"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:layout_below="@+id/t1"
            android:background="@drawable/buttons"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username2"
            android:hint="username"
            android:background="@drawable/buttons"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@+id/name2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password2"
            android:inputType="textPassword"
            android:layout_below="@+id/username2"
            android:hint="Password"
            android:background="@drawable/buttons"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpassword2"
            android:background="@drawable/buttons"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textSize="20dp"
            android:layout_below="@+id/password2"/>
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/buttons"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone2"
            android:layout_below="@+id/cpassword2"
            android:hint="phone"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email2"
            android:background="@drawable/buttons"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/phone2"
            android:hint="Email ID"
            android:textSize="20dp"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#03ae3c"
            android:background="@drawable/buttons"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:padding="10dp"
            android:onClick="insert"
            android:id="@+id/register2"/>
    </RelativeLayout>


</ScrollView>
