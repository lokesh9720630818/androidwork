<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFffff"
    android:scrollbars="none"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="15dp"
            android:id="@+id/showname"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:background="@drawable/buttons"
            android:layout_marginTop="40dp"
            android:hint="Enter Book Name"
            android:layout_centerHorizontal="true"
            android:id="@+id/searchbook"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchbook"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#03ae3c"
            android:background="@drawable/buttons"
            android:padding="10dp"

            android:text="search"
            android:id="@+id/sbookbutton"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/ll3"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/sbookbutton">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:capitalize="words"
                android:id="@+id/showbookname"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showwriter"
                android:capitalize="words"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showbookrating"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/votes"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail"
                android:capitalize="sentences"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="false"
                android:lines="4"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textarea"
                android:id="@+id/detailss"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:max="5"
                android:id="@+id/ratingbar"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:backgroundTint="#03ae3c"
                android:background="@drawable/buttons"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:id="@+id/RateButton"/>
        </LinearLayout>
    </RelativeLayout>



</ScrollView>
